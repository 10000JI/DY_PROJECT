	<sql id="search">
		<where>
			<if test="kind == 'title'">
				TITLE LIKE CONCAT('%',#{search},'%')
			</if>
			<if test="kind == 'writer'">
				WRITER LIKE CONCAT('%',#{search},'%')
			</if>
		</where>
	</sql>

 	
 	<insert id="setInsert" parameterType="BoardVO">
 		INSERT INTO BOARD (NUM,TITLE,CONTENTS,WRITER,REGDATE,HIT)
 		VALUES(#{num},#{title},#{contents},#{writer},now(),0)
 	</insert>
 	
 	 <insert id="setBoardFileAdd" parameterType="BoardFileVO">
 		INSERT INTO BOARDFILES (NUM, FILENAME,ORINAME)
 		VALUES(
 		(SELECT NUM FROM BOARD ORDER BY NUM DESC LIMIT 1)
 		, #{fileName},#{oriName})
 	</insert>
 	
 	<insert id="setStackAdd" parameterType="String">
	INSERT INTO BOARDSTACK (NUM, STACKNUM)
	VALUES (
	(SELECT NUM FROM BOARD ORDER BY NUM DESC LIMIT 1),
	#{stackNum}
	)
 	</insert>
  	
   	 <select id="getList" parameterType="Pager" resultType="BoardVO">
		SELECT * FROM BOARD 
		<include refid="search"></include>
		ORDER BY NUM ASC
		LIMIT #{startRow}, #{perPage}
 	</select>
 	
 	<select id="getStackList" resultMap="getStackResult">
 		SELECT S.STACK,BS.NUM FROM BOARDSTACK BS
		INNER JOIN STACK S ON S.STACKNUM = BS.STACKNUM ORDER BY NUM ASC
 	</select> 
 	
 	<resultMap type="BoardStackVO" id="getStackResult">
  		<id column="stackNum" property="stackNum"/>
  			<result column="num" property="num"/>
		<collection property="stackVOs" javaType="List" ofType="StackVO">
			<id column="stack" property="stack"/>
		</collection>
  	</resultMap>
 	
 	 	<select id="getTotalCount" resultType="Long" parameterType="Pager">
		SELECT COUNT(NUM) FROM BOARD
		<include refid="search"></include>
 	</select>
 	
 	<select id="getDetail" parameterType="BoardVO" resultMap="getDetailResult"> 
		SELECT *
		FROM BOARD N
			LEFT JOIN
			BOARDFILES NF
			USING(NUM)
		WHERE NUM=#{num}
 	</select>
 	
 	<select id="getFileDetail" parameterType="BoardFileVO" resultType="BoardFileVO">
  		SELECT * FROM BOARDFILES WHERE FILENUM=#{fileNum}
  	</select>
 	
 	 <resultMap type="BoardVO" id="getDetailResult">
  		<id column="num" property="num"/>
	  		<result column="title" property="title"/>
	  		<result column="contents" property="contents"/>
	  		<result column="writer" property="writer"/>
	  		<result column="regDate" property="regDate"/>
	  		<result column="hit" property="hit"/>
		<collection property="boardFileVOs" javaType="List" ofType="BoardFileVO">
			<id column="fileNum" property="fileNum"/>
				<result column="fileName" property="fileName"/>
				<result column="oriName" property="oriName"/>
		</collection>
  	</resultMap>
 </mapper>